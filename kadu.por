programa {
  cadeia nome
  inteiro idade, ano, diferenca
  funcao inicio() {
    escreva ("qual seu nome? \n")
    leia (nome)
    escreva ("em que ano voce nasceu? \n")
    leia (ano)
    idade = (2024 - ano)
    diferenca = (50 - idade)
    escreva ("ola " + nome + " voce tem " + idade + " anos, voce fara 50 anos daqui a " + diferenca + " anos")
     

  }
}
